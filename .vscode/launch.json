{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "argsPrompt",
            "description": "Enter arguments for launch",
            "default": "",
            "type": "promptString",
        }
    ],
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'wat'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=wat",
                    "--package=wat"
                ],
                "filter": {
                    "name": "wat",
                    "kind": "bin"
                }
            },
            "args": [
                "${input:argsPrompt}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'wat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=wat",
                    "--package=wat"
                ],
                "filter": {
                    "name": "wat",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}